    #Download and place jdk-6u29-linux-i586.bin from your Oracle Downloads in your /usr/lib/jvm folder
    cd /usr/lib/jvm
    sudo chmod +x jdk-6u29-linux-i586.bin
    sudo ./jdk-6u29-linux-i586.bin
  
