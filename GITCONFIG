[core]
    whitespace = nowarn
    pager = less
[user]
    name = raycoding
    email = rayshuddhashil@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
[color "branch"]
  current = blue
  local = yellow 
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  modified = blue
  deleted = red
[alias]
    spull = !git checkout master && git-svn fetch && git-svn rebase
    spush = !git checkout master && git-svn dcommit
    send = !git spull && git spush
    co = checkout
    ci = commit
    ca = commit -a
    br = branch
    st = status
    lg = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
    lgl = log --stat --abbrev-commit
    df = diff
    dfc = diff --color-words
    dfs = diff --cached
